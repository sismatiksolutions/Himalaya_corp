<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/myll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp" 
    
    >

    <ListView
        android1:id="@+id/logolist"
        android1:layout_width="300dp"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginLeft="10dp"
         android1:layout_marginTop="10dp"
          android1:layout_marginBottom="60dp"
         >
    </ListView>

    <ImageView
        android1:id="@+id/logoimage"
        android1:layout_width="350dp"
        android1:layout_height="300dp"
        android1:layout_alignParentTop="true"
        android1:layout_marginLeft="70dp"
        android1:layout_marginTop="102dp"
        android1:layout_toRightOf="@+id/logolist"
        android1:src="@drawable/ic_launcher"
         android:visibility="invisible"
        />

    <Button
        android1:id="@+id/btnuploadlogo"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/logoimage"
        android1:layout_below="@+id/logoimage"
        android1:layout_marginLeft="82dp"
        android1:layout_marginTop="77dp"
        android1:text="Upload" />
   
</RelativeLayout>
